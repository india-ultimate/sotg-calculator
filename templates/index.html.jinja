{% extends "base.html.jinja" %}
{% block content %}
<!-- Display the form to get the Spreadsheet URL -->
<div class="card card-body bg-light mb-3">
  {{usage|safe}}
  <div class="collapse" id="more-usage">
    <div class="card card-body bg-light">
      {{more_usage|safe}}
    </div>
  </div>
</div>

<form method="GET" class="row" action="{{url_for('score')}}">
  <input type="text" class="col-md-9 form-control-lg" name="url" placeholder="Google Sheets URL here..." required>
  <input type="submit" value="Calculate Ranks" class="col-md-3 btn btn-primary">
</form>

<div class="card card-body bg-light mt-3">
  {{motivation|safe}}
</div>
{% endblock %}

{% block scripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dom-to-image/2.6.0/dom-to-image.js"></script>
    <script src="{{url_for('static', filename='js/download-buttons.js')}}"></script>
{% endblock %}

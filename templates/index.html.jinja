{% extends "base.html.jinja" %}
{% block content %}
<h1 class="display-1">SOTG Calculator</h1>
{% if rankings is not none %}

<!-- Display the rankings, if they have been computed! -->
<h2>Rankings</h2>
{{ rankings.to_html(classes=['table']) }}

<!-- Display the detailed spirit scores by team -->
<h2>Detailed Spirit Scores</h2>
{% for team, scores in detailed_scores %}
  <div class="card border-dark mb-5">
    <div class="card-header text-center">
      <strong>{{team}}</strong>
    </div>
    <div class="card-body">
      {{ scores.to_html(index=False, classes=['table'], border=0, float_format='%d', justify='left') }}
    </div>
  </div>
{% endfor %}


{% elif url is not none %}

<!-- Form to choose the columns to use for scoring -->
<form method="GET" action="{{url_for('index')}}">
  <input type="hidden" name="url" value="{{url}}" placeholder="Google Sheets URL"/>


  <div class="form-group">
    <label for"opponent-name-column">Opponent Team Column</label>
    <small class="form-text">Select column with the name of the opponent team</small>
    <select name="opponent" class="custom-select" id="opponent-name-column">
      {% for column in all_columns %}
      <option value="{{loop.index0}}"
              {% if columns.opponent|int == loop.index0 %}selected{% endif %}>
        {{column}}
      </option>
      {% endfor %}
    </select>
  </div>

  <div class="form-group">
  <label>Opponent Scores Column Names</label>
  <small class="form-text">Select columns with the opponent spirit scores</small>
  {% for column in all_columns %}
  <div class="custom-control custom-checkbox">
    <input type="checkbox"
           class="custom-control-input"
           name="opponent-score-columns"
           id="opponent-score-column-{{loop.index0}}"
           value="{{loop.index0}}"/>
    <label class="custom-control-label" for="opponent-score-column-{{loop.index0}}">{{column}}</label>
  </div>
  {% endfor %}
  </div>

  <div class="form-group">
    <label for="self-team-column">Self Team Column</label>
    <small class="form-text">Select column with the name of the team doing scoring (self)</small>
    <select class="custom-select" name="team" id="team-name-column">
      {% for column in all_columns %}
      <option value="{{loop.index0}}"
              {% if columns.team|int == loop.index0 %}selected{% endif %}>
        {{column}}
      </option>
      {% endfor %}
    </select>
  </div>

  <div class="form-group">
    <label>Self Scores Column Names</label>
    <small class="form-text">Select columns with the self spirit scores</small>
    {% for column in all_columns %}
    <div class="custom-control custom-checkbox">
      <input type="checkbox"
             class="custom-control-input"
             name="team-score-columns"
             id="team-score-column-{{loop.index0}}"
             value="{{loop.index0}}"/>
      <label class="custom-control-label" for="team-score-column-{{loop.index0}}">{{column}}</label>
    </div>
    {% endfor %}
  </div>


  <input type="submit" value="Get Scores" class="btn btn-primary"/>
</form>

{% else %}

<!-- Display the form to get the Spreadsheet URL -->
{{usage|safe}}
<form method="GET" class="form-inline" action="{{url_for('index')}}">
    <input type="text" class="col form-control-lg" name="url" placeholder="Google Sheets URL" />
    <input type="submit" value="Get Scores" class="col-2 mb-2 btn btn-primary"/>
</form>

{% endif %}

{% endblock %}
